{
  "manifest_version": 2,
  "incognito": "not_allowed",
  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "nativeMessaging",
    "notifications",
    "contextMenus"
  ],
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "browser_action": {
    "default_icon": {
      "24": "icon_group_24.png"
    },
    "default_title": "Tab Groups"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "js": ["sidebarToggle.bundle.js"],
      "css": ["sidebar.css"]
    }
  ],
  "options_ui": {
    "chrome_style": true,
    "page": "options.html",
    "open_in_tab": true
  },

  "web_accessible_resources": ["ui.html"],
  "__chrome__commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      }
    },
    "toggle_sidebar": {
      "description": "Open the Tab Group Sidebar",
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      }
    }
  },
  "__firefox__commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      }
    },
    "toggle_sidebar": {
      "description": "Open the Tab Group Sidebar",
      "suggested_key": {
        "default": "Ctrl+Shift+Q"
      }
    }
  },
  "__firefox__browser_specific_settings": {
    "gecko": {
      "id": "automated-tab-organization@rschlaefli",
      "strict_min_version": "68.0",
      "update_url": "https://tabs.fra1.digitaloceanspaces.com/webextension/firefox-updates.json"
    }
  },
  "__opera__externally_connectable": {}
}
