{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "build",
    "paths": {
      "@src/*": ["src/*"]
    },
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  }
}
